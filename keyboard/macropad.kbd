;; Tartarus Macropad mapping

(defcfg
  input (device-file "/dev/input/by-id/usb-Razer_Razer_Tartarus_V2-event-kbd")
  output (uinput-sink "Tartarus KMonad")
  cmp-seq ralt
  fallthrough false
  allow-cmd true)

(defsrc
  1 2 3 4 5
  tab q w e r
  caps a s d f
  lsft z x c
  spc)

(deflayer default
  (tap-macro C-e P50 C-e) (tap-macro C-e P50 C-c) 7 8 9
  (tap-macro C-e P50 C-f) (tap-macro C-e P50 C-v) 4 5 6
  home end 1 2 3
  C-S-tab C-tab (tap-macro C-e P50 C-r) XX
  spc)
