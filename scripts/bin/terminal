#!/usr/bin/env fish

set expression "
(with-current-buffer
  (window-buffer (selected-window))
  (or (projectile-project-root) default-directory))
"

set dir (string trim -c \" (emacsclient --eval $expression 2> /dev/null))

if test $status -ne 0
    set dir ~/Desktop
end

echo $dir

konsole --notransparency --stylesheet /home/lepisma/cfg/konsole/konsole.css --workdir $dir
