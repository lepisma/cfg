#!/usr/bin/env fish

set dir (string trim -c \" (emacsclient --eval "(with-current-buffer (window-buffer (selected-window)) default-directory)" 2> /dev/null))

if test $status -ne 0
    set dir ~/Desktop
end

echo $dir

konsole --notransparency --stylesheet /home/lepisma/cfg/konsole/konsole.css --workdir $dir
